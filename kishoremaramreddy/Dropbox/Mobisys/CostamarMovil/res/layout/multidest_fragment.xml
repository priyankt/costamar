<?xml version="1.0" encoding="utf-8"?>
<!-- Layout usado para la busqueda de vuelos multidestino -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="8dp">
	    <Button android:id="@+id/btn_add_multi_dest"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:text="@string/btn_add_dest"
	        android:textColor="@android:color/white"
	        android:background="@drawable/btn_selector"/>
	   <TableLayout android:id="@+id/main_table"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/btn_add_multi_dest"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_gravity="center_horizontal"
	        android:background="@android:color/black"
	        android:visibility="gone">
	        <TableRow>
				<TextView android:layout_weight="1"
				    android:layout_margin="1dp"
				    android:gravity="center_horizontal"
				    android:text="@string/label_origin"
				    android:textColor="@android:color/black"
				    android:textStyle="bold"
				    android:textSize="14sp"
				    android:paddingTop="8dp"
				    android:paddingBottom="8dp"
				    android:background="#ffcccccc"/>
				<TextView android:layout_weight="1"
				    android:layout_margin="1dp"
				    android:text="@string/label_destination"
				    android:gravity="center_horizontal"
				    android:textColor="@android:color/black"
				    android:textStyle="bold"
				    android:paddingTop="8dp"
				    android:paddingBottom="8dp"
				    android:textSize="14sp"
				    android:background="#ffcccccc"/>
				<TextView android:layout_weight="1"
				    android:layout_margin="1dp"
				    android:text="@string/date"
				    android:gravity="center_horizontal"
				    android:textColor="@android:color/black"
				    android:textStyle="bold"
				    android:paddingTop="8dp"
				    android:paddingBottom="8dp"
				    android:textSize="14sp"
				    android:background="#ffcccccc"/>
				<TextView android:layout_weight="1"
				    android:layout_margin="1dp"
				    android:text="@string/remove"
				    android:gravity="center_horizontal"
				    android:textColor="@android:color/black"
				    android:textStyle="bold"
				    android:paddingTop="8dp"
				    android:paddingBottom="8dp"
				    android:textSize="14sp"
				    android:background="#ffcccccc"/>
	        </TableRow>
	    </TableLayout>
	    <LinearLayout android:id="@+id/tarif"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_below="@id/main_table"
	         android:layout_marginTop="20dp"
	         android:layout_marginLeft="8dp"
	         android:orientation="horizontal">
	         <TextView android:id="@+id/label_tariff"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:textColor="@android:color/black"
	             android:layout_gravity="center_vertical"
	             android:text="@string/tariff"/>
	         <Spinner android:id="@+id/tariff_spinner"
	             android:layout_width="fill_parent"
	             android:layout_height="33dp"
	             android:layout_marginLeft="8dp"
	             android:layout_marginRight="12dp"
	             android:background="@drawable/spinner_tariff_selector"/>
	     </LinearLayout>
	     <LinearLayout android:id="@+id/adult_child_layout"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="10dp"
	         android:layout_marginLeft="8dp"
	         android:layout_marginRight="8dp"
	         android:layout_below="@id/tarif"
	         android:orientation="horizontal">
	         <ImageView android:id="@+id/adult_icon"
	             android:layout_width="25dp"
	             android:layout_height="27dp"
	             android:layout_gravity="center_vertical"
	             android:src="@drawable/adult"
	             android:background="@android:color/transparent"/>
	         <LinearLayout android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="8dp"
	             android:orientation="vertical">
	             <TextView android:id="@+id/adults"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="@string/adults"
	                 android:layout_gravity="center_horizontal"
	                 android:textSize="12sp"
	                 android:textColor="@color/date_color"/>
	             <Spinner android:id="@+id/adult_spinner"
		             android:layout_width="60dp"
		             android:layout_height="28dp"
		             android:layout_marginTop="4dp"
		             android:background="@drawable/spinner_selector"/>
	             <TextView android:id="@+id/adults_condition"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginTop="4dp"
	                 android:layout_gravity="center_horizontal"
	                 android:text="@string/adult_condition"
	                 android:textSize="10sp"
	                 android:textColor="@color/date_color"/>
	         </LinearLayout>   
	         <ImageView android:id="@+id/child_icon"
	             android:layout_width="25dp"
	             android:layout_height="18dp"
	             android:layout_gravity="center_vertical"
	             android:layout_marginLeft="8dp"
	             android:src="@drawable/child"
	             android:background="@android:color/transparent"/>
	         <LinearLayout android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="8dp"
	             android:orientation="vertical">
	             <TextView android:id="@+id/childs"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="@string/childs"
	                 android:layout_gravity="center_horizontal"
	                 android:textSize="12sp"
	                 android:textColor="@color/date_color"/>
	             <Spinner android:id="@+id/child_spinner"
		             android:layout_width="60dp"
		             android:layout_height="28dp"
		             android:layout_marginTop="4dp"
		             android:background="@drawable/spinner_selector"/>
	             <TextView android:id="@+id/childs_condition"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginTop="4dp"
	                 android:layout_gravity="center_horizontal"
	                 android:text="@string/child_condition"
	                 android:textSize="10sp"
	                 android:textColor="@color/date_color"/>
	         </LinearLayout>
	         <ImageView android:id="@+id/infant_icon"
	             android:layout_width="25dp"
	             android:layout_height="18dp"
	             android:layout_marginLeft="8dp"
	             android:layout_gravity="center_vertical"
	             android:src="@drawable/infant"
	             android:background="@android:color/transparent"/>
	         <LinearLayout android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="8dp"
	             android:orientation="vertical">
	             <TextView android:id="@+id/infants"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="@string/infants"
	                 android:layout_gravity="center_horizontal"
	                 android:textSize="12sp"
	                 android:textColor="@color/date_color"/>
	             <Spinner android:id="@+id/infant_spinner"
		             android:layout_width="60dp"
		             android:layout_height="28dp"
		             android:layout_marginTop="4dp"
		             android:background="@drawable/spinner_selector"/>
	             <TextView android:id="@+id/infants_condition"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginTop="4dp"
	                 android:layout_gravity="center_horizontal"
	                 android:text="@string/infant_condition"
	                 android:textSize="10sp"
	                 android:textColor="@color/date_color"/>
	         </LinearLayout>
	     </LinearLayout>
	     <!--LinearLayout android:id="@+id/infant_layout"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="10dp"
	         android:layout_marginLeft="14dp"
	         android:layout_below="@id/adult_child_layout"
	         android:orientation="horizontal">
	         <ImageView android:id="@+id/infant_icon"
	             android:layout_width="33dp"
	             android:layout_height="26dp"
	             android:layout_gravity="center_vertical"
	             android:src="@drawable/infant"
	             android:background="@android:color/transparent"/>
	         <LinearLayout android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="18dp"
	             android:orientation="vertical">
	             <TextView android:id="@+id/infants"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="@string/infants"
	                 android:layout_gravity="center_horizontal"
	                 android:textSize="14sp"
	                 android:textColor="@color/date_color"/>
	             <Spinner android:id="@+id/infant_spinner"
		             android:layout_width="75dp"
		             android:layout_height="33dp"
		             android:layout_marginTop="4dp"
		             android:background="@drawable/spinner_selector"/>
	             <TextView android:id="@+id/infants_condition"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginTop="4dp"
	                 android:layout_gravity="center_horizontal"
	                 android:text="@string/infant_condition"
	                 android:textSize="12sp"
	                 android:textColor="@color/date_color"/>
	         </LinearLayout>   
	     </LinearLayout!-->
	     <LinearLayout android:id="@+id/btn_layout"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_below="@id/adult_child_layout"
	         android:layout_marginTop="10dp"
	         android:layout_marginLeft="10dp"
	         android:layout_marginRight="10dp"
	         android:weightSum="2"
	         android:orientation="horizontal">
	         <Button android:id="@+id/btn_search_flight"
	             android:layout_width="0dp"
	             android:layout_height="fill_parent"
	             android:layout_weight="1"
	             android:text="@string/btn_search_flight"
	             android:textColor="@android:color/white"
	             android:background="@drawable/btn_selector"/>
	         <!--Button android:id="@+id/btn_history"
	             android:layout_width="0dp"
	             android:layout_height="fill_parent"
	             android:layout_marginLeft="4dp"
	             android:layout_weight="1"
	             android:text="@string/see_history"
	             android:textColor="@android:color/white"
	             android:background="@drawable/btn_selector"/!-->
	     </LinearLayout>
	</RelativeLayout>
</ScrollView>	