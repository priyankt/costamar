<?xml version="1.0" encoding="utf-8"?>
<!-- Layout para la busqueda de tickets oneway, cargado desde clase fragment -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="8dp">
	    <RelativeLayout android:id="@+id/origin_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="35dp"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/border_drawable">
	        <TextView android:id="@+id/origin"
	            android:layout_width="80dp"
	            android:layout_height="fill_parent"
	            android:gravity="center"
	            android:text="@string/label_origin"
	            android:textColor="@android:color/black"
	            android:background="@color/origin_back"/>
	        <View android:id="@+id/rule01"
	            android:layout_width="1dp"
	            android:layout_height="fill_parent"
	            android:background="@color/border_color"
	            android:layout_toRightOf="@id/origin"/>
	        <AutoCompleteTextView android:id="@+id/origin_name"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_toLeftOf="@+id/rule02"
	            android:layout_toRightOf="@id/rule01"
	            android:singleLine="true"
	            android:paddingLeft="4dp"
	            android:textColor="@android:color/black"
	            android:background="@android:color/transparent"/>
	        <View android:id="@+id/rule02"
	            android:layout_width="1dp"
	            android:layout_height="fill_parent"
	            android:background="@color/border_color"
	            android:layout_toLeftOf="@+id/clear_origin"/>
	        <ImageButton android:id="@+id/clear_origin"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="8dp"
	            android:src="@drawable/select_location"
	            android:background="@android:color/transparent"/>
	        <View android:id="@+id/rule08"
	            android:layout_width="1dp"
	            android:layout_height="fill_parent"
	            android:visibility="gone"
	            android:background="@color/border_color"
	            android:layout_toLeftOf="@+id/loading"/>
	        <ProgressBar android:id="@+id/loading"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="gone"
		        android:layout_marginLeft="8dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="8dp"
		        style="?android:attr/android:progressBarStyleSmall"/>
	     </RelativeLayout>   
	     <RelativeLayout android:id="@+id/dest_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="35dp"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:layout_marginTop="10dp"
	        android:layout_below="@id/origin_layout"
	        android:background="@drawable/border_drawable">
	        <TextView android:id="@+id/dest"
	            android:layout_width="80dp"
	            android:layout_height="fill_parent"
	            android:gravity="center"
	            android:text="@string/label_destination"
	            android:textColor="@android:color/black"
	            android:background="@color/origin_back"/>
	        <View android:id="@+id/rule03"
	            android:layout_width="1dp"
	            android:layout_height="fill_parent"
	            android:background="@color/border_color"
	            android:layout_toRightOf="@id/dest"/>
	        <AutoCompleteTextView android:id="@+id/dest_name"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_toLeftOf="@+id/rule04"
	            android:layout_toRightOf="@id/rule03"
	            android:singleLine="true"
	            android:paddingLeft="4dp"
	            android:textColor="@android:color/black"
	            android:background="@android:color/transparent"/>
	        <View android:id="@+id/rule04"
	            android:layout_width="1dp"
	            android:layout_height="fill_parent"
	            android:background="@color/border_color"
	            android:layout_toLeftOf="@+id/clear_dest"/>
	        <ImageButton android:id="@+id/clear_dest"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="8dp"
	            android:src="@drawable/select_location"
	            android:background="@android:color/transparent"/>
	        <View android:id="@+id/rule09"
	            android:layout_width="1dp"
	            android:layout_height="fill_parent"
	            android:visibility="gone"
	            android:background="@color/border_color"
	            android:layout_toLeftOf="@+id/loading2"/>
	        <ProgressBar android:id="@+id/loading2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="gone"
		        android:layout_marginLeft="8dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="8dp"
		        style="?android:attr/android:progressBarStyleSmall"/>
	     </RelativeLayout>
	     <LinearLayout
            android:id="@+id/date_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dest_layout"
            android:layout_margin="8dp"
            android:baselineAligned="false"
            android:weightSum="2" >

            <RelativeLayout
                android:id="@+id/departure_date_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_drawable"
                android:clickable="true"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/label_departure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/departure_date"
                    android:textColor="@android:color/black" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_departure"
                    android:layout_marginTop="10dp" >

                    <ImageButton
                        android:id="@+id/btn_calender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/calendar" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/btn_calender"
                        android:gravity="top"
                        android:text="07"
                        android:textColor="#878787"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/date"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/month_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="may.&apos;13"
                            android:textColor="@color/date_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/spanish_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(mar.)"
                            android:textColor="@color/date_color"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
	     <LinearLayout android:id="@+id/tarif"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_below="@id/date_layout"
	         android:layout_marginTop="10dp"
	         android:layout_marginLeft="8dp"
	         android:orientation="horizontal">
	         <TextView android:id="@+id/label_tariff"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:textColor="@android:color/black"
	             android:layout_gravity="center_vertical"
	             android:text="@string/tariff"/>
	         <Spinner android:id="@+id/tariff_spinner"
	             android:layout_width="fill_parent"
	             android:layout_height="33dp"
	             android:layout_marginLeft="8dp"
	             android:layout_marginRight="12dp"
	             android:background="@drawable/spinner_tariff_selector"/>
	     </LinearLayout>
	     <LinearLayout android:id="@+id/adult_child_layout"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="10dp"
	         android:layout_marginLeft="8dp"
	         android:layout_marginRight="8dp"
	         android:layout_below="@id/tarif"
	         android:orientation="horizontal">
	         <ImageView android:id="@+id/adult_icon"
	             android:layout_width="25dp"
	             android:layout_height="27dp"
	             android:layout_gravity="center_vertical"
	             android:src="@drawable/adult"
	             android:background="@android:color/transparent"/>
	         <LinearLayout android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="8dp"
	             android:orientation="vertical">
	             <TextView android:id="@+id/adults"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="@string/adults"
	                 android:layout_gravity="center_horizontal"
	                 android:textSize="12sp"
	                 android:textColor="@color/date_color"/>
	             <Spinner android:id="@+id/adult_spinner"
		             android:layout_width="60dp"
		             android:layout_height="28dp"
		             android:layout_marginTop="4dp"
		             android:background="@drawable/spinner_selector"/>
	             <TextView android:id="@+id/adults_condition"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginTop="4dp"
	                 android:layout_gravity="center_horizontal"
	                 android:text="@string/adult_condition"
	                 android:textSize="10sp"
	                 android:textColor="@color/date_color"/>
	         </LinearLayout>   
	         <ImageView android:id="@+id/child_icon"
	             android:layout_width="25dp"
	             android:layout_height="18dp"
	             android:layout_gravity="center_vertical"
	             android:layout_marginLeft="8dp"
	             android:src="@drawable/child"
	             android:background="@android:color/transparent"/>
	         <LinearLayout android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="8dp"
	             android:orientation="vertical">
	             <TextView android:id="@+id/childs"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="@string/childs"
	                 android:layout_gravity="center_horizontal"
	                 android:textSize="12sp"
	                 android:textColor="@color/date_color"/>
	             <Spinner android:id="@+id/child_spinner"
		             android:layout_width="60dp"
		             android:layout_height="28dp"
		             android:layout_marginTop="4dp"
		             android:background="@drawable/spinner_selector"/>
	             <TextView android:id="@+id/childs_condition"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginTop="4dp"
	                 android:layout_gravity="center_horizontal"
	                 android:text="@string/child_condition"
	                 android:textSize="10sp"
	                 android:textColor="@color/date_color"/>
	         </LinearLayout>
	         <ImageView android:id="@+id/infant_icon"
	             android:layout_width="25dp"
	             android:layout_height="18dp"
	             android:layout_marginLeft="8dp"
	             android:layout_gravity="center_vertical"
	             android:src="@drawable/infant"
	             android:background="@android:color/transparent"/>
	         <LinearLayout android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="8dp"
	             android:orientation="vertical">
	             <TextView android:id="@+id/infants"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="@string/infants"
	                 android:layout_gravity="center_horizontal"
	                 android:textSize="12sp"
	                 android:textColor="@color/date_color"/>
	             <Spinner android:id="@+id/infant_spinner"
		             android:layout_width="60dp"
		             android:layout_height="28dp"
		             android:layout_marginTop="4dp"
		             android:background="@drawable/spinner_selector"/>
	             <TextView android:id="@+id/infants_condition"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginTop="4dp"
	                 android:layout_gravity="center_horizontal"
	                 android:text="@string/infant_condition"
	                 android:textSize="10sp"
	                 android:textColor="@color/date_color"/>
	         </LinearLayout>
	     </LinearLayout>
	     <LinearLayout android:id="@+id/price_layout"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_below="@id/adult_child_layout"
	         android:layout_marginTop="10dp"
	         android:layout_marginLeft="8dp"
	         android:orientation="horizontal">
	         <TextView android:id="@+id/label_price"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:textColor="@android:color/black"
	             android:layout_gravity="center_vertical"
	             android:text="@string/label_max_price"/>
	         <EditText android:id="@+id/price_text"
	             android:layout_width="fill_parent"
	             android:layout_height="33dp"
	             android:layout_marginLeft="8dp"
	             android:layout_marginRight="12dp"
				android:inputType="numberDecimal" />
	     </LinearLayout>
	     <LinearLayout android:id="@+id/freq_layout"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_below="@id/price_layout"
	         android:layout_marginTop="10dp"
	         android:layout_marginLeft="8dp"
	         android:orientation="horizontal">
	         <TextView android:id="@+id/label_frequency"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:textColor="@android:color/black"
	             android:layout_gravity="center_vertical"
	             android:text="@string/label_frequency"/>
	         <Spinner android:id="@+id/frequency_spinner"
	             android:layout_width="fill_parent"
	             android:layout_height="33dp"
	             android:layout_marginLeft="8dp"
	             android:layout_marginRight="12dp"
	             android:background="@drawable/spinner_tariff_selector"/>
	     </LinearLayout>
	     <LinearLayout android:id="@+id/notify_layout"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_below="@id/freq_layout"
	         android:layout_marginTop="10dp"
	         android:layout_marginLeft="8dp"
	         android:orientation="horizontal">
	         <TextView android:id="@+id/label_notify"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:textColor="@android:color/black"
	             android:layout_gravity="center_vertical"
	             android:text="@string/label_notifyby"/>
	         <Spinner android:id="@+id/notifyby_spinner"
	             android:layout_width="fill_parent"
	             android:layout_height="33dp"
	             android:layout_marginLeft="8dp"
	             android:layout_marginRight="12dp"
	             android:background="@drawable/spinner_tariff_selector"/>
	     </LinearLayout>
	     <LinearLayout android:id="@+id/btn_layout"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_below="@id/notify_layout"
	         android:layout_marginTop="10dp"
	         android:layout_marginLeft="10dp"
	         android:layout_marginRight="10dp"
	         android:weightSum="2"
	         android:orientation="horizontal">
	         <Button android:id="@+id/btn_cancel_alert"
	             android:layout_width="0dp"
	             android:layout_height="fill_parent"
	             android:layout_weight="1"
	             android:text="@string/btn_cancel"
	             android:textColor="@android:color/white"
	             android:background="@drawable/btn_selector"/>
	         <Button android:id="@+id/btn_create_alert"
	             android:layout_width="0dp"
	             android:layout_height="fill_parent"
	             android:layout_marginLeft="4dp"
	             android:layout_weight="1"
	             android:text="@string/btn_create_alert"
	             android:textColor="@android:color/white"
	             android:background="@drawable/btn_selector"/>
	     </LinearLayout>          
	</RelativeLayout>
</ScrollView>	