<?xml version="1.0" encoding="utf-8"?>
<!-- Layout que representa el listado completo de historial de busqueda -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout android:id="@+id/logo_layout"
        android:layout_width="fill_parent"
    	android:layout_height="55dp"
    	android:background="@drawable/logo_bg">
		<ImageView android:id="@+id/logo" 
		    android:layout_width="200dp"
		    android:layout_height="35dp"
		    android:src="@drawable/logo"
		    android:layout_centerInParent="true"/>
	</RelativeLayout>
	<TextView android:id="@+id/label_history"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/logo_layout"
	    android:layout_marginTop="8dp"
	    android:layout_marginLeft="8dp"
	    android:text="@string/label_history"
	    android:textSize="18sp"
	    android:textStyle="bold"
	    android:textColor="@android:color/black"/>
	<View android:id="@+id/rule01"
	    android:layout_width="fill_parent"
	    android:layout_height="2dp"
	    android:layout_marginTop="8dp"
	    android:layout_marginLeft="8dp"
	    android:layout_below="@id/label_history"
	    android:background="@android:color/black"/>
	<ListView android:id="@+id/lv"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@id/rule01"
	    android:layout_marginTop="8dp"
	    android:layout_marginLeft="8dp"
	    android:dividerHeight="1dp"
	    android:divider="@color/blue_divider"
	    android:cacheColorHint="@android:color/transparent"/>	
	<ImageView android:id="@+id/warning" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/alert_warning"
	    android:layout_centerInParent="true"
	    android:visibility="gone"/>
	<TextView android:id="@+id/no_items"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/warning"
	    android:layout_marginTop="15dp"
	    android:layout_centerInParent="true"
	    android:text="@string/no_history_result"
	    android:textColor="@color/red_color"
	    android:visibility="gone"/>
</RelativeLayout>